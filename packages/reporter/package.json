{
  "name": "@guanghechen/reporter",
  "version": "1.0.7",
  "description": "A simple colorful reporter",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/sora/tree/@guanghechen/reporter@1.0.7",
    "directory": "packages/reporter"
  },
  "homepage": "https://github.com/guanghechen/sora/tree/@guanghechen/reporter@1.0.7/packages/reporter#readme",
  "keywords": [
    "reporter"
  ],
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./lib/esm/index.mjs",
      "require": "./lib/cjs/index.cjs",
      "types": "./lib/types/index.d.ts"
    }
  },
  "source": "./src/index.ts",
  "main": "./lib/cjs/index.cjs",
  "module": "./lib/esm/index.mjs",
  "types": "./lib/types/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c ../../rollup.config.mjs",
    "clean": "rimraf lib",
    "test": "vitest run --config ../../vitest.config.ts",
    "test:coverage": "vitest run --config ../../vitest.config.ts --coverage",
    "test:update": "vitest run --config ../../vitest.config.ts -u"
  },
  "files": [
    "lib/",
    "!lib/**/*.map",
    "package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@guanghechen/chalk.types": "workspace:^",
    "@guanghechen/reporter.types": "workspace:^"
  }
}
