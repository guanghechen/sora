{
  "extends": "./tsconfig.settings.json",
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      /** shared packages */
      "@guanghechen/internal": ["packages-shared/internal/src"],

      /** basic packages */
      "@guanghechen/chalk": ["packages/chalk/src"],
      "@guanghechen/equal": ["packages/equal/src"],
      "@guanghechen/error": ["packages/error/src"],
      "@guanghechen/monitor": ["packages/monitor/src"],
      "@guanghechen/pipeline": ["packages/pipeline/src"],
      "@guanghechen/reporter": ["packages/reporter/src"],
      "@guanghechen/scheduler": ["packages/scheduler/src"],
      "@guanghechen/task": ["packages/task/src"],
      "@guanghechen/viewmodel": ["packages/viewmodel/src"]
    }
  },
  "exclude": ["**/__test__/fixtures"]
}
