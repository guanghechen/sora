{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/sora/tree/release-2.x.x"
  },
  "homepage": "https://github.com/guanghechen/sora/tree/release-2.x.x/#readme",
  "engines": {
    "node": ">= 18.0.0"
  },
  "type": "module",
  "scripts": {
    ":publish": "run-s clean build:production test:coverage && lerna publish",
    ":publish-recover": "git stash && lerna publish from-package",
    ":upgrade": "pnpm update -i && run-s clean format build test",
    "build": "cross-env NODE_ENV=production ROLLUP_SHOULD_SOURCEMAP=true pnpm -r run build",
    "build:production": "cross-env NODE_ENV=production ROLLUP_SHOULD_SOURCEMAP=false pnpm -r run build",
    "clean": "pnpm -r run clean && pnpm install",
    "format": "run-s format:lintfix format:prettier",
    "format:prettier": "prettier . --write",
    "format:lintfix": "eslint . --fix",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-s postinstall:dev",
    "postinstall:dev": "is-ci || husky",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "run:ts": "node --loader ts-node/esm",
    "test": "pnpm -r run --if-present test",
    "test:coverage": "pnpm -r run --if-present test:coverage",
    "test:update": "pnpm -r run --if-present test:update",
    "version": "pnpm install && ghc-doc-link-rewrite && git stage -u pnpm-lock.yaml packages/**/package.json packages/**/*.md"
  },
  "devDependencies": {
    "@guanghechen/conventional-changelog": "6.0.4",
    "@guanghechen/eslint-config": "^7.0.20",
    "@guanghechen/fs": "^1.0.11",
    "@guanghechen/monorepo": "^1.0.5",
    "@guanghechen/rollup-config": "^6.0.11",
    "@guanghechen/script-doc-link": "^6.0.8",
    "@rollup/plugin-replace": "6.0.2",
    "@types/node": "20.19.11",
    "@types/uuid": "10.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "10.0.0",
    "eslint": "9.34.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "lerna": "8.2.4",
    "lint-staged": "16.1.5",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "rollup": "4.49.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,mts,cjs,cts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.15.4"
}
