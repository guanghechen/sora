{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/sora/tree/release-2.x.x"
  },
  "homepage": "https://github.com/guanghechen/sora/tree/release-2.x.x/#readme",
  "type": "module",
  "scripts": {
    ":publish": "pnpm clean && pnpm build:production && pnpm test:coverage && lerna publish",
    ":publish-recover": "git stash && lerna publish from-package",
    ":upgrade": "pnpm update -i && pnpm clean && pnpm format && pnpm build && pnpm test",
    "build": "cross-env NODE_ENV=production ROLLUP_SHOULD_SOURCEMAP=true pnpm -r run build",
    "build:production": "cross-env NODE_ENV=production ROLLUP_SHOULD_SOURCEMAP=false pnpm -r run build",
    "clean": "pnpm -r run clean && pnpm install",
    "format": "pnpm format:lintfix && pnpm format:prettier",
    "format:prettier": "prettier . --write",
    "format:lintfix": "eslint . --fix",
    "prepublishOnly": "pinst --disable",
    "postinstall": "is-ci || husky",
    "postpublish": "pinst --enable",
    "rebuild": "pnpm clean && pnpm build",
    "run:ts": "node --loader ts-node/esm",
    "test": "pnpm -r run --if-present test",
    "test:coverage": "pnpm -r run --if-present test:coverage",
    "test:update": "pnpm -r run --if-present test:update",
    "version": "pnpm install && ghc-doc-link-rewrite && git stage -u pnpm-lock.yaml packages/**/package.json packages/**/*.md"
  },
  "devDependencies": {
    "@guanghechen/conventional-changelog": "6.0.4",
    "@guanghechen/eslint-config": "^7.0.20",
    "@guanghechen/fs": "^1.0.11",
    "@guanghechen/monorepo": "^1.0.5",
    "@guanghechen/script-doc-link": "^6.0.9",
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-typescript": "12.1.4",
    "@types/node": "25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "10.1.0",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "lerna": "9.0.3",
    "lint-staged": "16.2.7",
    "pinst": "3.0.0",
    "prettier": "3.8.1",
    "rimraf": "6.1.2",
    "rollup": "4.57.1",
    "rollup-plugin-dts": "6.2.3",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,mts,cjs,cts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.15.4"
}
