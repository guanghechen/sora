{
  "name": "@guanghechen/sora",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/sora/tree/release-2.x.x"
  },
  "homepage": "https://github.com/guanghechen/sora/tree/release-2.x.x/#readme",
  "engines": {
    "node": ">= 16.0.0"
  },
  "type": "module",
  "scripts": {
    ":publish": "yarn test:coverage && node --experimental-vm-modules node_modules/.bin/lerna publish",
    ":publish-recover": "git stash && lerna publish from-package",
    ":upgrade": "yarn upgrade-interactive && run-s clean format build test",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lintfix format:prettier",
    "format:prettier": "prettier . --write",
    "format:lintfix": "eslint . --fix",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-s postinstall:dev",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "test": "lerna run test --concurrency 1",
    "test:coverage": "lerna run --concurrency 1 test -- --coverage",
    "test:update": "lerna run --concurrency 1 test -- -u",
    "version": "yarn && ghc-doc-link-rewrite && git stage -u yarn.lock packages/**/package.json packages/**/*.md"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "dayjs": "^1.11.10",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "@babel/core": "7.23.3",
    "@guanghechen/conventional-changelog": "^5.0.2",
    "@guanghechen/eslint-config": "^5.0.3",
    "@guanghechen/eslint-config-ts": "^5.0.12",
    "@guanghechen/helper-jest": "^5.0.9",
    "@guanghechen/jest-config": "^5.0.9",
    "@guanghechen/rollup-config": "^5.3.3",
    "@guanghechen/script-doc-link": "^5.0.15",
    "@rollup/plugin-replace": "^5.0.5",
    "@types/jest": "29.5.8",
    "@types/node": "^18.18.9",
    "ci-info": "^4.0.0",
    "cross-env": "^7.0.3",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-prettier": "5.0.1",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "^29.7.0",
    "lerna": "7.4.2",
    "lint-staged": "15.1.0",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "3.1.0",
    "prettier-2": "npm:prettier@^2",
    "rimraf": "^5.0.5",
    "rollup": "^4.4.1",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,mts,cjs,cts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.3.1"
}
