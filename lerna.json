{
  "$schema": "./node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "ignoreChanges": ["*.md", "**/__test__/**/*"],
  "changelogPreset": "./script/changelog.mjs",
  "command": {
    "publish": {
      "changelogPreset": "./script/changelog.mjs",
      "conventionalCommits": false,
      "forcePublish": false,
      "graphType": "all",
      "message": ":bookmark:  release",
      "private": false,
      "push": false
    },
    "version": {
      "allowBranch": ["main", "release-*"],
      "changelogPreset": "./script/changelog.mjs",
      "conventionalCommits": false,
      "forcePublish": false,
      "message": ":bookmark:  release",
      "private": false
    }
  }
}
